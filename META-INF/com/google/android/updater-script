#!/sbin/sh

# This is your Magisk module updater script

# Copy the content from the original /product/etc/felica/common.cfg to the new file
cat /product/etc/felica/common.cfg > /system/etc/felica/common.cfg

# Make the desired changes in the new common.cfg
sed -i 's/00000014,content://com.google.android.pixelnfc.provider.DeviceInfoContentProvider/isJapanSku//' /system/etc/felica/common.cfg
sed -i 's/00000015,is_japan_sku//' /system/etc/felica/common.cfg

# Add the new line
echo "00000018,1" >> /system/etc/felica/common.cfg

# Print a message to indicate success
ui_print "FeliCa mod installation complete!"

# Exit with a successful code
exit 0
